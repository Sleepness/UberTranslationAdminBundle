{% trans_default_domain 'SleepnessUberTranslationBundle' %}

<div class="row">
    <div class="col-md-10">
        <h1>{{ 'main_text'|trans }}</h1>
    </div>
    <div class="col-md-2">
        <a href="{{ path('sleepness_translation_create') }}" class="btn btn-success">{{ 'add_trans_button'|trans }}</a>
    </div>
</div>

{% for message_deleted in app.session.flashbag.get('translation_deleted') %}
    <div class="alert alert-success">
        <strong>
            {{ message_deleted|trans }}
        </strong>
    </div>
{% endfor %}

{% for message_edited in app.session.flashbag.get('translation_edited') %}
    <div class="alert alert-success">
        <strong>
            {{ message_edited|trans }}
        </strong>
    </div>
{% endfor %}

<div class="row">
    {% include 'SleepnessUberTranslationAdminBundle:Translation:_filters.html.twig' %}
</div>

<br/>

<div class="row">
    {% include 'SleepnessUberTranslationAdminBundle:Translation:_table.html.twig' %}
</div>
